   "source": [
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "from pathlib import Path\n",
    "import time\n",
    "\n",
    "def cyclic_autocorrelation_function(x, alpha, max_lag):\n",
    "    N = len(x)\n",
    "    lags = np.arange(-max_lag, max_lag + 1)\n",
    "    R_alpha = np.zeros(len(lags), dtype=np.complex64)\n",
    "    exp_alpha = np.exp(-1j * 2 * np.pi * alpha * np.arange(N))\n",
    "    for i, lag in enumerate(lags):\n",
    "        if lag >= 0:\n",
    "            product = x[lag:] * np.conj(x[:N-lag])\n",
    "            cyclic_product = product * exp_alpha[:N-lag]\n",
    "        else:\n",
    "            product = x[:N+lag] * np.conj(x[-lag:])\n",
    "            cyclic_product = product * exp_alpha[-lag:]\n",
    "        if len(cyclic_product) > 0:\n",
    "            R_alpha[i] = np.mean(cyclic_product)\n",
    "    return R_alpha, lags\n",
    "\n",
    "def calculate_scd(x, fs, alphas_to_test, nperseg):\n",
    "    scd_matrix = []\n",
    "    print(f\"Calculating SCD for {len(alphas_to_test)} alpha values...\")\n",
    "    start_time = time.time()\n",
    "    for i, alpha in enumerate(alphas_to_test):\n",
    "        caf, lags = cyclic_autocorrelation_function(x, alpha/fs, max_lag=nperseg//2)\n",
    "        win = np.hanning(len(caf))\n",
    "        caf_windowed = caf * win\n",
    "        scd_slice = np.fft.fft(caf_windowed, n=nperseg)\n",
    "        scd_matrix.append(np.fft.fftshift(scd_slice))\n",
    "    end_time = time.time()\n",
    "    print(f\"SCD calculation finished in {end_time - start_time:.2f} seconds.\")\n",
    "    scd_matrix = np.array(scd_matrix)\n",
    "    freq_axis = np.fft.fftshift(np.fft.fftfreq(nperseg, 1/fs))\n",
    "    return scd_matrix, freq_axis, alphas_to_test"
   ]
